#creazione della classe Student
class Student:
    #dichiarazione degli attributi
    def init(self, name, surname, gender, age):
        self.name = name
        self.surname = surname
        self.gender = gender
        self.age = age
        self.courses = []
#metodo che mostra i corsi a cui lo studente Ã¨ iscritto
    def enrolled_courses(self):
        print(f"Enrolled courses for {self.name} {self.surname}:")
        for course in self.courses:
            print(course.uni_name)
#creazione della classe Course
class Course:
    #dichiarazione degli attributi
    def init(self, id, uni_name, description):
        self.id = id
        self.uni_name = uni_name
        self.description = description
        self.students = []
#metodo che permette di aggiungere uno studente alla lista
def add_student(self, student):
    self.students.append(student)
    student.courses.append(self)
#metodo che permette di rimuovere uno studente dalla lista
def remove_student(self, student):
    if student in self.students:
        self.students.remove(student)
        student.courses.remove(self)
#metodo che restituisce il numero di studenti iscritti al corso
def count_enrolled_students(self):
    return len(self.students)
